@using Entity_Layer.Concrate
@model List<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_OOPLayout.cshtml";
}


<h1 class="alert alert-success">Kategoriler</h1>

<table class="table table-bordered table-hover">
    <tr>
        <th>Category Id</th>
        <th>Customer Name</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger">Sil</a> </td>
            <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-warning">Güncelle</a> </td>
        </tr>
    }
</table>
<br />
<a href="/Category/AddCategory/" class="btn btn-success">Yeni Kategori Ekle</a>
