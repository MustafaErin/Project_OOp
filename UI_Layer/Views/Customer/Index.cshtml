@using Entity_Layer.Concrate
@model List<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_OOPLayout.cshtml";
}


<h1 class="alert alert-success">Müşteriler</h1>

<table class="table table-bordered table-hover">
    <tr>
        <th>Customer Id</th>
        <th>Customer Name</th>
        <th>Customer City</th>
        <th>Customer Joop</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CustomerId</td>
            <td>@item.CustomerName</td>
            <td>@item.CustomerCity</td>
            <td>@item.joop.JoobName</td>
            <td><a href="/Customer/DeleteCustomer/@item.CustomerId" class="btn btn-outline-danger">Sil</a> </td>
            <td><a href="/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-outline-warning">Güncelle</a> </td>
        </tr>
    }
</table>
<br />
<a href="/Customer/AddCustomer/" class="btn btn-success">Yeni Müşteri Ekle</a>